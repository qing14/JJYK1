<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShopCarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="购物车" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopCarRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="right"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/AllClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选/全不选"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/AllMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="合计：00.00"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/AllNum"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="去结算（0）"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>
</LinearLayout>